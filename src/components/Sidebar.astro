---
import { pages } from '../data/pages.js';
---

<div class="sidebar" id="sidebar">
  <div class="counter">Investigative Hours: <span id="counter">0</span></div>
  
  <!-- Inventory Section -->
  <div class="inventory-container">
    <div id="inventory-grid" class="inventory-grid">
      <!-- Item images will be dynamically added here -->
    </div>
  </div>

  <div class="link-list" id="linkList">
    {pages.map(item => {
      if (item.type === 'category') {
        return <div class="category">{item.title}</div>;
      } else if (item.type === 'link') {
        const classes = ['nav-link'];
        if (item.special) classes.push('special');
        if (item.special1) classes.push('special1');
        if (item.initialLocked === true) classes.push('locked'); // Add 'locked' class

        return (
          <a
            href={`/${item.filename}`}
            class={classes.join(' ')}
            data-filename={item.filename}
            data-counted={item.counted !== false ? 'true' : 'false'}
          >
            {item.title}
          </a>
        );
      }
    })}
  </div>
</div>

<style>
  .sidebar {
    width: 280px;
    background-color: #111;
    color: white;
    padding: 10px;
    overflow-y: auto;
    position: fixed;
    top: 50px;
    left: 0;
    bottom: 0;
    z-index: 999;
    transition: transform 0.3s ease-in-out; /* Add smooth transition */
    display: flex;
    flex-direction: column; /* Allow for footer at bottom */
  }

  .counter {
    font-size: 20px;
    color: rgb(255, 255, 255);
    margin-bottom: 20px;
    text-underline-offset: 2px;
    background-color: #8B0000;
    padding: 15px;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    border: 2px solid #ff6b6b;
  }

  /* Inventory Styles - 30% smaller */
  .inventory-container {
    margin-bottom: 20px;
    border-radius: 8px;
    border: 1px solid #444;
    /* Set a background image for the inventory */
    background-image: url('/assets/inventory-bg.jpg');
    background-size: cover;
    background-position: center;
    /* 30% smaller than original 260px = 182px */
    height: 160px;
    min-height: 160px;
    max-height: 160px;
    width: 100%;
    padding: 10px;
    overflow: hidden;
    box-sizing: border-box;
    position: relative;
  }

  .inventory-grid {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    overflow-y: auto; /* Enable vertical scrolling for items */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 28px; /* 30% smaller gap */
    padding: 14px 0; /* 30% smaller padding */
    box-sizing: border-box;
  }

  /* Customize scrollbar for inventory */
  .inventory-grid::-webkit-scrollbar {
    width: 6px;
  }

  .inventory-grid::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 3px;
  }

  .inventory-grid::-webkit-scrollbar-thumb {
    background: #d1a000;
    border-radius: 3px;
  }

  /* 30% smaller than original 100px = 70px */
  .inventory-item {
    width: 50px !important;
    height: 50px !important;
    min-width: 50px !important;
    min-height: 50px !important;
    max-width: 50px !important;
    max-height: 50px !important;
    object-fit: contain !important;
    border-radius: 5px;
    border: 2px solid #d1a000;
    background-color: rgba(0, 0, 0, 0.4);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .link-list {
    flex-grow: 1; /* Allow link list to grow and push footer down */
    overflow-y: auto; /* Make this section scrollable if needed */
  }

  .link-list a {
    display: block;
    padding: 10px;
    color: white;
    text-decoration: none;
    border-bottom: 1px solid #444;
    white-space: normal; /* Allow text to wrap to the next line */
    word-break: break-word; /* Helps break very long words */
  }

  .link-list a:hover {
    background-color: #333;
  }

  .category {
    padding: 10px;
    background-color: #e9b60ece;
    color: #000000;
    font-weight: bold;
    border-bottom: 3px solid #d1a000;
    margin-top: 10px;
    text-shadow: 0 0 3px rgb(85, 85, 85);
  }

  .link-list a.visited {
    background-color: #888888;
    color: #000000;
    text-decoration: solid;
  }

  .link-list a.special {
    background-color: #002382;
    color: #ffffff;
    font-weight: bold;
    text-shadow: 0 0 3px black;
  }

  .link-list a.special.locked {
    background-color: #002382;
    color: #ffffff;
  }

  .link-list a.special1 {
    background-color: #7e0082;
    color: #ffffff;
    font-weight: bold;
    text-shadow: 0 0 3px black;
  }

  .link-list a.special1.locked {
    background-color: #7e0082;
    color: #ffffff;
  }

  .link-list a.locked {
    background-color: #444;
    color: #999;
    position: relative;
    pointer-events: none;
  }

  .link-icon {
    color: #FFD700 !important;
    font-size: 24px;
    margin-left: 5px;
    position: relative;
    z-index: 2;
    display: inline-block;
    font-weight: bold;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .sidebar {
      width: 250px;
      transform: translateX(-100%); /* Hide off-screen by default */
      z-index: 1002;
    }

    .sidebar.open {
      transform: translateX(0); /* Bring into view when open */
    }
    
    /* Maintain proportions on mobile */
    .inventory-container {
      height: 160px;
      min-height: 160px;
      max-height: 160px;
    }
    
    .inventory-item {
      width: 45px !important;
      height: 45px !important;
      min-width: 45px !important;
      min-height: 45px !important;
      max-width: 45px !important;
      max-height: 45px !important;
    }
    
    .inventory-grid {
      gap: 24px; /* Smaller gap for mobile */
    }
  }

  /* Small mobile styles */
  @media (max-width: 480px) {
    .sidebar {
      width: 200px;
    }
    
    /* Maintain proportions on small mobile */
    .inventory-container {
      height: 110px;
      min-height: 110px;
      max-height: 110px;
    }
    
    .inventory-item {
      width: 25px !important;
      height: 25px !important;
      min-width: 25px !important;
      min-height: 25px !important;
      max-width: 25px !important;
      max-height: 25px !important;
    }
    
    .inventory-grid {
      gap: 20px; /* Even smaller gap for small mobile */
    }
  }
</style>