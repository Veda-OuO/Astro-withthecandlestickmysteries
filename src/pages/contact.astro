---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" pageId="contact">
  <style>
    body {
      --page-background-image: url('/assets/aflanders.jpg');
    }
  </style>

  <div class="title">Contact</div>
  
  <div class="text-box">
    <p>What did you think of the game? Any recommendations? Catch any typos or bugs? I'd love to hear from you.</p>
  </div>
  
  <div class="contact-form-container">
    <form action="https://formspree.io/f/movldjyq" method="POST">
      <div class="form-group">
        <label for="name">Your Name</label>
        <input type="text" id="name" name="name" required />
      </div>

      <div class="form-group">
        <label for="email">Your Email</label>
        <input type="email" id="email" name="_replyto" required />
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" required></textarea>
      </div>

      <!-- Optional: redirect on success -->
      <input type="hidden" name="_next" value="https://withthecandlestickmysteries.com/thankyou.html" />

      <!-- Optional: honeypot spam trap -->
      <input type="text" name="_gotcha" style="display:none" />

      <button type="submit" class="contact-button">Send Message</button>
    </form>
  </div>
</BaseLayout>

<style>
  .title {
    font-size: 100px;
    color: rgb(255, 166, 0);
    text-shadow: 0 0 10px rgb(0, 0, 0);
    padding: 10px;
    margin-bottom: 20px;
  }

  .contact-form-container {
    max-width: 700px;
    margin: 30px auto;
  }

  form {
    background-color: rgba(0, 0, 0, 0.6);
    padding: 2rem;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  label {
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    color: #fff;
  }

  input, textarea {
    padding: 0.8rem;
    font-size: 1rem;
    border: none;
    border-radius: 6px;
    background: rgba(51, 51, 51, 0.8);
    color: white;
    resize: vertical;
  }

  textarea {
    min-height: 150px;
  }

  .contact-button {
    background: #8B0000;
    color: white;
    font-weight: bold;
    font-size: 1rem;
    padding: 0.9rem 1.5rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s ease;
    align-self: flex-start;
  }

  .contact-button:hover {
    background: #a30000;
    transform: translateY(-2px);
  }

  /* Media queries for responsive design */
  @media (max-width: 768px) {
    .title {
      font-size: 40px;
      margin-top: 50px;
    }
    
    form {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 30px;
    }
    
    .contact-button {
      width: 100%;
    }
  }
</style>