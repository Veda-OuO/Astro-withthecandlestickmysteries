import '../styles/global.css'; // Import global styles
import Sidebar from '../components/Sidebar.astro';
import VisitTracker from '../components/VisitTracker.astro';

export interface Props {
  title: string;
  pageId: string;
}

const { title, pageId } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-65QXKQK4RX"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-65QXKQK4RX');
  </script>
  
  <title>With the Candlestick Mysteries</title>
</head>
<body class="page-background">
  <div class="banner">Case 1: Where's Wesley</div>
  <button class="menu-toggle" id="menuToggle">â˜° Menu</button>
  
  <div class="container">
    <Sidebar />
    
    <div class="main" id="main">
      <VisitTracker pageId={pageId} />
      <slot />
    </div>
  </div>
</body>
</html>

<style>
  .main {
    margin-left: 280px;
    flex-grow: 1;
    padding: 20px;
    position: relative;
    min-height: calc(100vh - 50px);
    background-color: rgba(255, 255, 255, 0.01); 
    z-index: 0; 
  }

  /* Mobile styles */
  @media (max-width: 768px) {    
    .main {
      margin-left: 0;
      padding: 10px;
    }
  }
</style>